$card-width = 200px
$card-height = 200px
$card-border-width = 20px

.card
  width: $card-width
  height: $card-height
  position: relative
  perspective: 800px
  transform-origin: 50% 100%
  transition: all 400ms

  &.is-facedown .card-inner
    transform: rotateY(180deg)

.card-inner
  width: 100%
  height: 100%
  position: absolute
  transform-style: preserve-3d
  transition: transform 1s

  line-height: 260px
  color: $white
  font-size: 80px

.card-side
  display: block
  position: absolute
  width: 100%
  height: 100%
  backface-visibility: hidden
  border-radius: 15px

.card-front
  background: lightsteelblue
  background-size: cover
  text-shadow: 1px 1px 0 rgba($gray-dark, .5)
  font-size: 20px
  line-height: $card-height

.card-back
  background: $gray-dark
  transform: rotateY(180deg)